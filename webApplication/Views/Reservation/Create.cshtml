@model webApplication.Models.Reservation

<h2>Rezervasyon oluştur</h2>

<div class="alert alert-info">
    <strong>Koltuk:</strong> @ViewBag.SeatNumber
</div>

<form asp-action="Create" method="post">

    <input type="hidden" asp-for="SeatId" />

    <!-- Backend'e gönderilecek gizli inputlar -->
    <input type="hidden" name="selectedDate" value="@ViewBag.SelectedDate" />
    <input type="hidden" name="startTime" value="@ViewBag.SelectedStart" />
    <input type="hidden" name="endTime" value="@ViewBag.SelectedEnd" />

    <!-- Kullanıcıya sadece gösterilecek alanlar -->
    <div class="form-group mb-3">
        <label>Tarih</label>
        <input class="form-control" value="@ViewBag.SelectedDate" readonly />
    </div>

    <div class="form-group mb-3">
        <label>Başlangıç saati</label>
        <input class="form-control" value="@ViewBag.SelectedStart" readonly />
    </div>

    <div class="form-group mb-3">
        <label>Bitiş saati</label>
        <input class="form-control" value="@ViewBag.SelectedEnd" readonly />
    </div>

    <!-- Kullanıcının dolduracağı tek alan -->
    <div class="form-group mb-3">
        <label asp-for="UserName">Ad Soyad</label>
        <input asp-for="UserName" class="form-control" placeholder="Adınızı giriniz" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Rezerve et</button>


    <a asp-controller="Hall" asp-action="Index" class="btn btn-secondary">İptal et</a>

</form>