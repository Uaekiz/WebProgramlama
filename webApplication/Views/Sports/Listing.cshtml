@model IEnumerable<webApplication.Models.Sport>

@{
    ViewData["Title"] = "1. Kat Spor Faaliyetleri Listesi";
    int sayac = 0;
}

<div class="container mt-5">
    <h2 class="text-white mb-4">
        <i class="fas fa-running"></i> @ViewData["Title"]
    </h2>

    <div class="row">
        @foreach (var item in Model)
        {
            var renkSinifi = "card-renk-" + (sayac % 8);

            <div class="col-12 mb-4"> 
                <div class="card listing-card @renkSinifi h-100">
                    <div class="card-body d-flex flex-column">
                        
                        <h5 class="card-title fw-bold fs-4 mb-3">
                            @Html.DisplayFor(modelItem => item.Name)
                        </h5>
                        
                        <hr style="border-color: rgba(255,255,255,0.5);">

                        <div class="card-text flex-grow-1">
                            
                            <p class="mb-2">
                                <i class="fas fa-map-marker-alt me-2"></i> 
                                <strong>Yer:</strong> @Html.DisplayFor(modelItem => item.Location)
                            </p>
                            
                            <p class="mb-2">
                                <i class="fas fa-calendar-alt me-2"></i> 
                                <strong>Saat/Gün:</strong> @Html.DisplayFor(modelItem => item.Date)
                            </p>
                            
                            <p class="mb-2">
                                <i class="fas fa-users me-2"></i> 
                                <strong>Maksimum Kişi:</strong> @Html.DisplayFor(modelItem => item.Capacity)
                            </p>
                            
                            <p class="mb-2">
                                <i class="fas fa-info-circle me-2"></i> 
                                <strong>Detay:</strong> @Html.DisplayFor(modelItem => item.info)
                            </p>

                        </div>

                        <div class="mt-auto text-end pt-3">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm">
                                Detaylar
                            </a>
                        </div>

                    </div>
                </div>
            </div>
            sayac++;
        }
    </div>
</div>