@model IEnumerable<webApplication.Models.Course>

@{
    ViewData["Title"] = "2. Kat Kurs Listesi";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Location)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.Capacity)</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                <td>
                   <div class="btn-group" role="group">
        
        <a asp-action="Details" asp-route-id="@item.Id" 
           class="btn btn-sm btn-info me-2">
            Detaylar
        </a>
        
        @*
        <a asp-action="Form" asp-route-id="@item.Id" 
           class="btn btn-sm btn-success">
            Kaydol
        </a>
        *@
    </div>
                </td>
            </tr>
        }
    </tbody>
</table>